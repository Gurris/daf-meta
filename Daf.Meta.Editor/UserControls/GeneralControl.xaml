<UserControl x:Class="Daf.Meta.Editor.GeneralControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Daf.Meta.Editor"
             mc:Ignorable="d"
			 xmlns:System="clr-namespace:System;assembly=mscorlib"
			 xmlns:Daf.Meta="clr-namespace:Daf.Meta;assembly=Daf.Meta"
			 xmlns:dd="urn:gong-wpf-dragdrop"
			 xmlns:pt="http://propertytools.org/wpf"
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<ScrollViewer>
			<DockPanel>
				<pt:PropertyGrid DockPanel.Dock="Top" Margin="10" PreviewMouseWheel="HandlePreviewMouseWheel" SelectedObjects="{Binding Path=SelectedDataSources}" TabVisibility="Collapsed" />
			</DockPanel>
		</ScrollViewer>
	</Grid>
</UserControl>